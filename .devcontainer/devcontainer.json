{
  "name": "Unison Carbon Pipeline",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "initializeCommand": "mkdir -p ${localWorkspaceFolder}/.unison ${localWorkspaceFolder}/.claude ${localWorkspaceFolder}/scripts",
  "customizations": {
    "vscode": {
      "extensions": [
        "unison.unison"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.unison,target=/root/.unison,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.claude,target=/root/.claude,type=bind,consistency=cached"
  ],
  "features": {
  },
  "remoteEnv": {
    "SSH_AUTH_SOCK": "${localEnv:SSH_AUTH_SOCK}"
  },
  "forwardPorts": [5757, 8080, 5858],
  "portsAttributes": {
    "5757": {
      "label": "UCM",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Unison UI",
      "onAutoForward": "notify"
    },
    "5858": {
      "label": "UCM MCP Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": ".devcontainer/bootstrap-unison-project.sh",
  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
}
